@model Huflix.Areas.Admin.Models.Receipt
@{
    ViewData["Title"] = "Confirm";
}
@section Carousel{
    <div class="slider movie-items">
        <div class="container">
            <div class="row">

            </div>
        </div>
    </div>
}

<h1>Checkout</h1>
<hr />

<form method="post" enctype="multipart/form-data" asp-controller="Cart" asp-action="Checkout">
    <h2>Thông tin Khách Hàng</h2>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Họ tên Khách Hàng:</label>
        <div class="col-sm-6">
            <input asp-for="CustomerName" class="form-control" required>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Số điện thoại:</label>
        <div class="col-sm-6">
            <input asp-for="Phone" class="form-control" required>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Địa chỉ giao hàng:</label>
        <div class="col-sm-6">
            <input asp-for="Address" class="form-control" required>
        </div>
    </div>
    <hr />
    <h2>Phương pháp thanh toán</h2>
    <div class="row">
        <div class="col-sm-6">
            <select class="custom-select">
                <option>Ngân hàng nội địa</option>
                <option>Ví Momo</option>
                <option>Ví Airpay</option>
                <option>Thanh toán khi nhận hàng</option>
            </select>
        </div>
    </div>

    <hr />
    <h2>Giỏ hàng</h2>
    <table class="table-bordered table">
        <tr>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
        @foreach (var item in ViewBag.cart)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td><img src="~/images/products/@item.Product.Image" width="60" height="60" /></td>
                <td>@item.Product.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.Price * item.Quantity)</td>
            </tr>
        }
        <tr>
            <td align="right" colspan="5">Sum</td>
            <td>
                @ViewBag.total
            </td>
        </tr>
    </table>
    <hr />
    <input type="submit" value="Thanh toán" class="btn btn-success" />
</form>
   
