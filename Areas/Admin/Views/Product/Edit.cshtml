@model Huflix.Areas.Admin.Models.Product
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Image</label>
                <div class="col-sm-6">
                    <input class="form-control" type="file" name="photo" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="CategoryId" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories">
                    </select>
                </div>
            </div>


            <div class="form-group row">
                <label asp-for="Code" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Code" class="form-control" />
                </div>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>





            <div class="form-group row">
                <label asp-for="Price" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Price" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Description" class="form-control" />
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
          


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

            @if (ViewBag.Status == 1)
            {
                <p class="text-warning">Record saved</p>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>