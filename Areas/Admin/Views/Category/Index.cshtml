@model List<Huflix.Areas.Admin.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Count: @Model.Count</h2>
<p><a class="btn btn-primary" asp-controller="Category" asp-action="Add">Add</a></p>
<table class="table">
    <thead>
        <tr>
            <td>ID</td>
            <td>Category Name</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>
                    <a class="btn btn-outline-info" asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
                    <a class="btn btn-outline-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>